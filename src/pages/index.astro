---
import Layout from "@layouts/Layout.astro";
import Navbar from "@components/ui/Navbar.astro";
import ProfileHeader from "@components/ProfileHeader.astro";
import ProfileDescription from "@components/ProfileDescription.astro";
import ProfileJobs from "@components/ProfileJobs.astro";
---

<Layout>
  <Navbar />
  <main>
    <ProfileHeader />
    <div class="separator"></div>
    <ProfileDescription />
    <ProfileJobs />
  </main>
</Layout>
<style>
  main {
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow-y: auto;
    max-height: 100vh;
    padding-bottom: 2rem;
  }
  .separator {
    height: 1px;
    background: var(--accent-light);
    margin: 2rem;
  }
</style>
