---
import "@fontsource/roboto/300.css";
import "@fontsource/roboto/400.css";
import "@fontsource/roboto/500.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="content-container">
      <slot />
    </div>
  </body>
</html>
<style is:global>
  :root {
    --background: #eaeaea;
    --main: #fff;
    --accent: #000;
    --accent-light: #c2c2c2;
    --accent-dark: #8f8f8f;
  }
  .dark {
    --main: #1a1a1a; /* Dark gray */
    --accent: #fff;
    --accent-light: #c2c2c2;
    --accent-dark: #8f8f8f;
  }
  body {
    background: var(--background);
    margin: 0;
    font-family: "Roboto", sans-serif;
  }
  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  a {
    color: var(--accent);
  }
  * {
    box-sizing: border-box;
  }
  a:link {
    color: var(--accent);
    text-decoration: none;
  }
  a:visited {
    color: var(--accent);
  }
  a:hover {
    color: var(--accent);
  }
  .content-container {
    display: flex;
    flex-direction: row;
    max-width: 1750px;
    min-height: 100dvh;
    margin: 0 auto;
    box-shadow: 0 0 19px 9px rgba(0, 0, 0, 0.1);
    background: var(--main);
    border-left: 1px solid var(--main);
    border-right: 1px solid var(--main);
  }

  .dark body {
    background: var(--main);
  }

  .dark .content-container {
    border-left: 1px solid var(--accent-light);
    border-right: 1px solid var(--accent-light);
    box-shadow: 0 0 19px 9px rgb(0 0 0 / 65%);
  }

  h1 {
    font-size: 2rem;
  }

  h3 {
    font-size: 1.25rem;
  }

  h4 {
    font-size: 1rem;
  }

  h5 {
    font-size: 0.875rem;
  }

  b {
    font-weight: 400;
  }

  p {
    font-weight: 300;
  }

  @media (width <= 900px) {
    .content-container {
      flex-direction: column;
      min-width: 100vw;
    }
  }
</style>
