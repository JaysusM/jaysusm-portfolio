---
import { Icon } from "astro-icon/components";
import { about, socials } from "../information.json";
const aboutLines = about.split("\n");
---

<section class="profile-description">
  <div class="profile-about">
    <h3>About Me</h3>
    <div>
      {aboutLines.map((line) => <p set:html={line}/>)}
    </div>
  </div>
  <div class="profile-chips">
    <div class="profile-chip">
      <h5>Location</h5>
      <p><Icon name="spain" /> MÃ¡laga, Spain</p>
    </div>
    <div class="profile-chip">
      <h5>LinkedIn</h5>
      <a href=`https://linkedin.com/${socials.linkedin}` target="_blank"
        >{socials.linkedin}<Icon name="arrow_right_up" /></a
      >
    </div>
    <div class="profile-chip">
      <h5>Email</h5>
      <a href={`mailto:${socials.email}`} target="_blank"
        >{socials.email}<Icon name="arrow_right_up" /></a
      >
    </div>
    <div class="profile-chip">
      <h5>GitHub</h5>
      <a href={`https://github.com/${socials.github}`} target="_blank"
        >{socials.github}<Icon name="arrow_right_up" /></a
      >
    </div>
  </div>
</section>
<style>
  .profile-about > p {
    text-align: justify;
  }
  .profile-description {
    display: flex;
    flex-direction: row;
    gap: 4rem;
    margin: 0 2rem;
  }
  .profile-about {
    max-width: min(100%, 800px);    
    min-width: 600px;
  }
  .profile-chips {
    min-width: 225px;
    flex: 1;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(225px, 1fr));
    grid-template-rows: repeat(auto-fill, 100px)
  }
  .profile-chip {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .profile-chip a,
  .profile-chip p {
    font-weight: 300;
    color: var(--accent);
    font-weight: 400;
  }
  .profile-chip p {
    margin: 0;
  }
  .profile-chip p svg,
  .profile-chip a svg {
    vertical-align: bottom;
    height: 1.2rem;
    width: 1.2rem;
  }
  .profile-chip a svg {
    margin-left: 0.3rem;
  }
  .profile-chip p svg {
    margin-right: 0.3rem;
  }
  .profile-chip a:hover {
    text-decoration: underline;
  }
  h3 {
    margin-top: 0;
  }
  h5 {
    margin-bottom: 0;
  }
</style>
