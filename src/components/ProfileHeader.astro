---
import { Icon } from "astro-icon/components";
import Button from "./ui/Button.astro";
import { name, mainDescription } from "../information.json";
---

<section id="profile">
  <img class="banner" src="/banner.png" />
  <div class="profile-info">
    <div class="profile-image">
      <img src="/memoji-thumbsup.png" alt="Profile Picture" />
      <Icon name="verified_check" />
    </div>
    <div class="profile-name">
      <h1>{name}</h1>
      <h3>{mainDescription}</h3>
    </div>
    <div class="profile-contact">
      <Button>
        <Icon name="message" />
        <a href="mailto:jmartinruiz26@gmail.com">Message</a>
      </Button>
    </div>
  </div>
</section>
<style>
  section {
    width: 100%;
    display: flex;
    flex-direction: column;
  }
  img.banner {
    width: 100%;
    height: 250px;
    object-fit: cover;
    border-bottom: 1px solid var(--accent-light);
  }
  .profile-info {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin: 0 3rem;
  }
  .profile-image {
    position: relative;
  }
  .profile-image > svg {
    position: absolute;
    bottom: 5px;
    right: 10px;
    width: 3rem;
    height: 3rem;
    fill: var(--accent);
  }
  .profile-info > .profile-image > img {
    width: 175px;
    height: 175px;
    max-height: 20vh;
    max-width: 20vh;
    border-radius: 50%;
    margin-top: -50px;
    margin-right: 1rem;
    background-color: var(--main);
    border: 3px solid var(--main);
    outline: 3px solid var(--background);
    box-shadow: 0 0 10px 5px rgba(0, 0, 0, 0.1);
  }
  .profile-info > .profile-name {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .profile-info > .profile-name > h1 {
    margin: 0;
  }
  .profile-info > .profile-name > h3 {
    margin: 0;
    font-weight: 300;
    color: var(--accent-dark);
  }
  .profile-info > .profile-contact {
    margin-left: auto;
    display: flex;
    flex-direction: row;
    gap: 1rem;
  }
  .profile-info > .profile-contact svg {
    width: 1.25rem;
    height: 1.25rem;
  }
  .profile-info > .profile-contact a {
    font-weight: 400;
    font-size: 1rem;
  }

  @media (width <= 1130px) {
    .profile-contact {
      margin: 0;
      justify-content: center;
      align-items: center;
      min-width: 100%;
    }

    .banner {
      max-height: 20vh;
    }
  }
</style>
