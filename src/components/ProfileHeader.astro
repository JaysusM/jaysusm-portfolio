---
import { Icon } from 'astro-icon/components';
import { name, mainDescription } from '../information.json';
---
<section>
    <img class="banner" src="/banner.jpg" />
    <div class="profile-info">
        <div class="profile-image">
            <img src="/memoji-thumbsup.png" alt="Profile Picture" />
            <Icon name="verified_check" />
        </div>
        <div class="profile-name">
            <h1>{name}</h1>
            <h3>{mainDescription}</h3>
        </div>        
    </div>
</section>
<style>
    section {
        width: 100%;
        height: 300px;
        max-height: max(300px, 30vh);
        display: flex;
        flex-direction: column;
    }
    img.banner {
        width: 100%;
        height: 250px;
        object-fit: cover;
    }
    .profile-info {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        margin: 0 3rem;
    }
    .profile-image {
        position: relative;
    }
    .profile-image > svg {
        position: absolute;
        bottom: 5px;
        right: 10px;
        width: 3rem;
        height: 3rem;
        fill: var(--accent);
    }
    .profile-info > .profile-image > img {
        width: 175px;
        height: 175px;
        border-radius: 50%;
        margin-top: -50px;
        margin-right: 1rem;
        background-color: var(--main);
        border: 3px solid var(--main);
        outline: 3px solid var(--background);
        box-shadow: 0 0 10px 5px rgba(0, 0, 0, 0.1);
    }
    .profile-info > .profile-name {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .profile-info > .profile-name > h1 {
        margin: 0;
    }
    .profile-info > .profile-name > h3 {
        margin: 0;
        font-weight: 300;
        color: var(--accent-dark);
    }
</style>